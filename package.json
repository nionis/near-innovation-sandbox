{
  "name": "near-innovation-sandbox",
  "private": true,
  "scripts": {
    "clean": "find . -type d \\( -name '.turbo' -o -name 'dist' -o -name 'build' -o -name 'node_modules' \\) -exec rm -rf {} +",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.0",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": {
    "packages": [
      "apps/attest-cli",
      "apps/attest-web",
      "contracts/*",
      "packages/*"
    ],
    "nohoist": [
      "**/near-sdk-js",
      "**/near-sdk-js/**"
    ]
  }
}